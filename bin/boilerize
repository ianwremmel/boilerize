#!/usr/bin/env node

// TODO need to think about how config is loaded based on cwd vs --dir

const formatPackage = require(`../src/format-package`);
const path = require(`path`);
const pkg = require(`../package`);
const argv = require(`yargs`)
  .fail((msg, error) => {
    console.error(error.stack);
  })
  .option(`dir`, {
    alias: `d`,
    desc: `Specify the directory to boil`,
    default: process.cwd(),
    global: true
  })
  .commandDir(`../src/cli`)
  .help()
  .version(pkg.version)
  .argv;
