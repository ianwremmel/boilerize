#!/usr/bin/env node

require(`babel-register`);

// TODO need to think about how config is loaded based on cwd vs --dir

const pkg = require(`../package`);
const yargs = require(`yargs`);

const argv = yargs
  .fail((msg, error) => {
    console.error(error.stack);
  })
  .option(`dir`, {
    alias: `d`,
    desc: `Specify the directory to boil`,
    default: process.cwd(),
    global: true
  })
  .commandDir(`../src/cli`)
  .help()
  .version(pkg.version)
  .argv;
